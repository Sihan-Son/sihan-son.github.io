---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import Sidebar from '../../components/Sidebar.astro';
import { getPostSlug } from '../../lib/constants';

export async function getStaticPaths() {
  const allPosts = (await getCollection('posts')).filter(p => import.meta.env.DEV || !p.data.draft);
  const categoryMap = new Map<string, typeof allPosts>();

  allPosts.forEach(post => {
    post.data.categories.forEach(cat => {
      const key = cat.toLowerCase().replace(/[\/\s]/g, '-');
      if (!categoryMap.has(key)) categoryMap.set(key, []);
      categoryMap.get(key)!.push(post);
    });
  });

  return [...categoryMap.entries()].map(([key, posts]) => ({
    params: { category: key },
    props: {
      category: posts[0].data.categories.find(
        c => c.toLowerCase().replace(/[\/\s]/g, '-') === key
      ) || key,
      posts: posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf()),
    },
  }));
}

const { category, posts } = Astro.props;
---

<BaseLayout title={category}>
  <div class="max-w-7xl mx-auto px-4 py-8">
    <div class="flex flex-col lg:flex-row gap-8">
      <div class="flex-1 min-w-0">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{category}</h1>
        <p class="text-gray-500 dark:text-gray-400 mb-8">{posts.length} posts</p>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {posts.map(post => (
            <PostCard
              title={post.data.title}
              date={post.data.date}
              section={post.data.section}
              slug={getPostSlug(post)}
              thumbnail={post.data.thumbnail}
              categories={post.data.categories}
              tags={post.data.tags}
            />
          ))}
        </div>
      </div>
      <Sidebar />
    </div>
  </div>
</BaseLayout>
