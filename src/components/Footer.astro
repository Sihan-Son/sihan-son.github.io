---
import { SITE_TITLE } from '../lib/constants';
const year = new Date().getFullYear();
---

<footer class="border-t mt-16" style="border-color: var(--border-color);">
  <div class="max-w-7xl mx-auto px-4 py-8 flex flex-col md:flex-row items-center justify-between gap-4 font-mono text-xs tracking-wider" style="color: var(--text-muted);">
    <p>&copy; {year} {SITE_TITLE}</p>
    <div class="flex items-center gap-6">
      <a href="/rss.xml" class="hover-underline transition-colors" style="color: var(--text-muted);">rss</a>
      <a href="/archives/" class="hover-underline transition-colors" style="color: var(--text-muted);">archives</a>
    </div>
  </div>
</footer>
