---
interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl?: string;
}

const { currentPage, totalPages, baseUrl = '/page' } = Astro.props;
const prevUrl = currentPage === 2 ? '/' : `${baseUrl}/${currentPage - 1}/`;
const nextUrl = `${baseUrl}/${currentPage + 1}/`;
---

{totalPages > 1 && (
  <nav class="flex items-center justify-center gap-6 mt-12 font-mono text-sm" aria-label="Pagination">
    {currentPage > 1 ? (
      <a href={prevUrl} class="group flex items-center gap-2 transition-colors" style="color: var(--text-secondary);">
        <span class="inline-block transition-transform group-hover:-translate-x-1">&larr;</span>
        <span class="hover-underline">prev</span>
      </a>
    ) : (
      <span style="color: var(--text-muted); opacity: 0.3;">&larr; prev</span>
    )}
    <span class="tracking-wider" style="color: var(--text-muted);">
      {currentPage} / {totalPages}
    </span>
    {currentPage < totalPages ? (
      <a href={nextUrl} class="group flex items-center gap-2 transition-colors" style="color: var(--text-secondary);">
        <span class="hover-underline">next</span>
        <span class="inline-block transition-transform group-hover:translate-x-1">&rarr;</span>
      </a>
    ) : (
      <span style="color: var(--text-muted); opacity: 0.3;">next &rarr;</span>
    )}
  </nav>
)}
