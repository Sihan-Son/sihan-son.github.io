---
interface Props {
  slot?: string;
}

const { slot = '' } = Astro.props;
---

<div class="my-6">
  <ins
    class="adsbygoogle"
    style="display:block"
    data-ad-client="ca-pub-5414348543182733"
    data-ad-slot={slot}
    data-ad-format="auto"
    data-full-width-responsive="true"
  ></ins>
  <script is:inline>
    (adsbygoogle = window.adsbygoogle || []).push({});
  </script>
</div>
